pipeline {
    agent any
    stages {
        stage('Maven Clean & Compile') {
            steps {
                // Clean and compile the Maven project
                sh 'mvn clean compile'
            }
        }

        stage('checkout') {
            steps {
                // Fetch the code from the main branch of GitHub
                git branch: 'ichrakBranch', url: 'https://github.com/eyakossentini/achats_examDevops.git'
            }
        }

        stage('SonarQube analysis') {
            steps {

                 withSonarQubeEnv('SonarQube') {
                                    sh 'mvn sonar:sonar \
                                        -Dsonar.projectKey=achatProject_devops \
                                        -Dsonar.host.url=http://192.168.50.4:9000 \
                                        -Dsonar.token=squ_e074112d2c8477aa19964c5cd440a7f7e183493f'
                }
            }
        }

        stage('Test Junit & Mockito') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Nexus') {
            steps {
                // Deploy your artifacts to Nexus
                sh 'mvn deploy'
            }
        }

     stage('Docker Image') {
                     steps {
                         sh 'docker build -t ouhibiichrak/achat:1.0.0 .'
                     }
         }

                 stage('DockerHub') {
                     steps {
                         withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'ichrak.ouhibi@esprit.tn', passwordVariable: 'ichrak123')]) {
                             sh 'docker login -u ichrak.ouhibi@esprit.tn -p ichrakouh123'
                             sh 'docker push ouhibiichrak/achat:1.0.0'
                         }
                     }
                 }
    }
}
}
